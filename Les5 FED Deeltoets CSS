}

h1 {
    font-weight: bold;
}

a {
    text-decoration: none;
    color: #373737;
}

a:hover {
    color: #ff3296;
}

p > a {
    font-size: 1.15em;
    text-shadow: 0.1em 0.05em 0.1em #fdaf89;
}

section:hover{
    transition:all 1s ease-in-out;
    transform: rotate(4deg);
}

/* Opleiding */
section > h1 {
    margin-top: 0.7em;
    font-size: 1.4em;
}

/* Ontwerp opleiding voor IAM */
section > article > section > h1 {
    font-size: 1em;
}

/* CMD Amsterdam, Studieprogramma, Beroepen*/
section > article > h1 {
    font-size: 1.2em; 
}

/* Waar leiden we voor op? */
section > article > article > h1 {
    font-size: 1em;
}

h1 + p {
    margin: -1em 0 1em;
}

article > article > ol > li:nth-child(2n) {
    background: none;
}

article > article > ol > li {
    background: #ebebeb;
    padding: .5em;
    margin: 0;
}

/* ------------------------------------------- FORM ------------------------------------------- */

form {
    margin-top: 3em;
    margin-bottom: 3em;
    width: 100%;
}

[for="name"]:after, [for="email"]:after {
    content: "*";
    color: #000;
}

section > form > input {
    width: 90%;
}

fieldset {
    border-radius: 1em;
    box-shadow: 0 0 0.2em currentColor;
    padding: 1em;
    border: 0;
    background-color: #ebebeb;
    border-bottom-right-radius: 0;
    box-sizing: border-box; /* je pakt de ware grote van de box en telt niet de padding erbij op */
    transition:all 1s ease;
    transform: scale(1);
}

fieldset:hover{
    transform: scale(1.2);
}
/* Adjacent sibling het eerste element na het element fieldset */
fieldset + fieldset {
    margin: 2em 0 0;
}

legend {
    padding: 0;
    font-size: 1.2em;
    position: absolute;
}

legend + ol {
    padding: 2em 0 0;
    list-style: none;
}

section > form > fieldset > ol > li {
    padding: .5em;
    margin: 0;
}

input {
    display: block;
    width: 100%;
    box-sizing: border-box; /* Vertelt de browser wat de hoogte en breedte qua waarde moet hebben */
    font-size: 100%;
    border-radius: .5em;
    border: .3em solid #737373;
    box-shadow: inset .1em .1em .2em rgba(0,0,0,.5);
    transition: all 1s;
    margin: .3em 0;
    padding: 0.1em;
}

input:hover {
    border: .3em solid #f16723;
}

input:focus {
    box-shadow:  0 0 .9em #f16723;
    border: .3em solid #f16723;
}

